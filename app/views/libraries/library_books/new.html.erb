<%= turbo_frame_tag 'new_library_book' do %>
  <div class="bg-white shadow-md rounded-2xl p-6 mb-10">
    <h2 class="text-xl font-medium text-gray-700 mb-4">Add a Book</h2>
    <p class="text-sm text-gray-500 mb-6">
      Please provide an <strong class="text-gray-700">ISBN number</strong> <!--<em>or</em> a <strong class="text-gray-700">Title and Author</strong>. -->
    </p>

    <%= form_with model: [@library, @book], method: :post, data: { turbo: false }, local: true do |f| %>
      <!-- ISBN Section -->
      <div class="mb-6">
        <%= f.label :isbn, "ISBN Number", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :isbn, autofocus: true, maxlength: 13, minlength: 10, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

<!--
      
      <div class="flex items-center my-6">
        <div class="flex-grow border-t border-gray-300"></div>
        <span class="mx-4 text-gray-500 text-sm">or</span>
        <div class="flex-grow border-t border-gray-300"></div>
      </div>

      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= f.label :title, "Title", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
        <div>
          <%= f.label :author, "Author", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :author, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
      </div>
-->
      <div class="mt-6 items-baseline">
        <%= f.submit "Add Book", class: "bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded-xl shadow" %>
        <%= link_to "Cancel", library_path(@library), class: "bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded-xl shadow" %>
      </div>
    <% end %>
  </div>
<% end %>