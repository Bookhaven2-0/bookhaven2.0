<div class="flex flex-col mt-4 bg-white shadow-sm border border-slate-200 rounded-lg w-80 hover:bg-gray-100 hover:shadow-lg">
  <div id="<%= dom_id library %>">
    <%= link_to(library) do %>
      <h5 class="text-slate-800 text-xl font-bold text-center">
        <%= "#{library.name} (##{library.charter_number})" %>
      </h5>
      <div class="">
        <h6 class="mb-2 text-slate-800 text-lg font-semibold text-center">
          <%= library.city_state %>
        </h6>
        <ul class="text-slate-600 leading-normal font-light text-center">
          <li>Number of Books: 10</li>
        </ul>
      </div>
    <% end %>
  </div>  
</div>
