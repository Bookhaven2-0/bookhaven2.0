<% content_for :title, "Libraries" %>

<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="flex justify-between items-center mt-10 mb-8">
    <h1 class="font-bold text-4xl text-indigo-700">Libraries</h1>
    <%= link_to "Add New Library", new_library_path,
          class: "inline-block rounded-xl px-4 py-2.5 bg-indigo-600 hover:bg-indigo-500 text-white font-semibold shadow transition" %>
  </div>

  <% if @libraries.any? %>
    <div id="libraries" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @libraries.each do |library| %>
        <%= render library %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center my-20">
      <p class="text-gray-500 text-lg italic">No libraries found.</p>
    </div>
  <% end %>
</div>
