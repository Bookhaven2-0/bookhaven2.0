<div class="bg-gradient-to-b from-yellow-50 to-white min-h-screen text-gray-800">
  <!-- Hero Section -->
  <section class="text-center py-20 px-6 sm:px-12">
    <h1 class="text-5xl sm:text-6xl font-extrabold text-teal-700 mb-4">
      Welcome to BookHaven
    </h1>
    <p class="text-xl sm:text-2xl max-w-2xl mx-auto font-light">
      Helping communities track, share, and discover books in Free Little Libraries near them.
    </p>
    <div class="mt-8 flex justify-center gap-4 flex-wrap">
      <%= link_to "Browse Libraries", libraries_path, class: "px-6 py-3 bg-teal-600 text-white text-lg font-medium rounded-full hover:bg-teal-700 transition" %>
      <%= link_to "Add a Book", '#', class: "px-6 py-3 bg-yellow-400 text-teal-900 text-lg font-medium rounded-full hover:bg-yellow-300 transition" %>
    </div>
  </section>

  <!-- Features Section -->
  <section class="max-w-7xl mx-auto px-6 py-16 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
    <!-- Feature 1 -->
    <div class="bg-white rounded-2xl shadow-md p-6 hover:shadow-xl transition">
      <div class="text-3xl text-teal-600 mb-3">📚</div>
      <h3 class="text-xl font-semibold text-teal-700">Track What's Inside</h3>
      <p class="text-gray-600 mt-2">See which books are currently in each library—before you visit.</p>
    </div>

    <!-- Feature 2 -->
    <div class="bg-white rounded-2xl shadow-md p-6 hover:shadow-xl transition">
      <div class="text-3xl text-teal-600 mb-3">🌎</div>
      <h3 class="text-xl font-semibold text-teal-700">Explore Nearby Libraries</h3>
      <p class="text-gray-600 mt-2">Find Free Little Libraries near you and browse their contents.</p>
    </div>

    <!-- Feature 3 -->
    <div class="bg-white rounded-2xl shadow-md p-6 hover:shadow-xl transition">
      <div class="text-3xl text-teal-600 mb-3">🤝</div>
      <h3 class="text-xl font-semibold text-teal-700">Contribute to the Community</h3>
      <p class="text-gray-600 mt-2">Add books you've dropped off to help others discover hidden gems.</p>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="bg-teal-700 text-white py-12 text-center px-6">
    <h2 class="text-3xl sm:text-4xl font-bold mb-3">Join the BookHaven Community</h2>
    <p class="text-lg sm:text-xl mb-6">Together, we can make every Free Little Library easier to explore and enjoy.</p>
    <%= link_to "Sign Up Now", new_user_registration_path, class: "px-8 py-4 bg-yellow-400 text-teal-900 font-semibold rounded-full text-lg hover:bg-yellow-300 transition" %>
  </section>

  <!-- Footer -->
  <footer class="bg-teal-900 text-white py-8">
    <div class="text-center text-sm">
      © 2025 BookHaven — Built with love for book lovers and community builders.
    </div>
  </footer>
</div>
